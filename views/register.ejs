<!doctype html>
<html lang="en">

        <head>
            <!-- Required meta tags -->
            <meta charset="utf-8">
            <meta name="viewport" content="width=device-width, initial-scale=1">
        
            <!-- Bootstrap CSS -->
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
                integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
            
            <link rel="stylesheet" href="/css/style.css">
            <link rel="stylesheet" href="https://unpkg.com/intro.js/minified/introjs.min.css">
            <!-- Add IntroJs styles -->
            <link type="text/css" href="./node_modules/intro.js/introjs.css" rel="stylesheet">
        
            <!-- Add Nazanin template -->
            <link type="text/css" href="./node_modules/intro.js/themes/introjs-dark.css" rel="stylesheet">
            <title>Register page</title>
        </head>

<body>

    <div class="container card w-25 mt-5">
        <% if(messages.error) {%> 
            <small style="color:red"><%= messages.error %> </small>
        <% } %> 
        <form id="post-form">

            <!-- Name input -->
            <div class="form-outline mb-2">
                <label class="form-label" for="form1Example2">Name</label>
                <input type="text" id="name" class="form-control" value="<%= messages.name %>" />
            </div>

            <!-- Mobile number -->
            <div class="form-outline mb-2">
                <label class="form-label" for="form1Example2">Mobile number</label>
                <input type="number" id="number" class="form-control" value="<%= messages.number %>" />
            </div>

            <!-- Email input -->
            <div class="form-outline mb-2">
                <label class="form-label" for="form1Example1">Email address</label>
                <input type="email" id="email" class="form-control" value="<%= messages.email%>" />
            </div>

            <!-- Images to creat password -->

            <div class="form-group">
                <label for="password">Password:</label><br/>
                <div id="pass">
                    <% gridOfRandomImages.forEach(function(row){ %>
                        <div class="row no-gutters">
                
                        <% row.forEach(function(col){ %>
                            <div class="col-2 no-gutters">
                                <div id="<%= `${col[Object.keys(col)[0]]}_num` %>" class="hide"></div>
                                <img src='/img/<%= Object.keys(col)[0] %>.svg' alt="img" style="
                                    height: 50px;
                                    width: 50px;" 
                                    class="hide-img"
                                    id="<%= col[Object.keys(col)[0]] %>"
                                    onclick="onSelectImage('<%= col[Object.keys(col)[0]] %>')" >
                            </div>
                       <% }) %>
                    </div>
                    <div style="padding-bottom: 15px;"></div>
                   <% }) %>
                </div>   

               <div class="visiblock">
                <div class="line"></div>
                <img src='/img/eyeOpen.png' alt="eye" class="visibility" onClick="onVisibility()">
                <img src='/img/eyeClosed.png' alt="eye" class="visibility1 hidden" onClick="onVisibility()">
                <div class="line"></div>
               </div>



              <div class="container mb4 mb-4">
                <div class="radio-toolbar d-flex">
                    <div hidden>
                        <input type="radio" id="noBucket" name="radios" value="<%= noBucket %>" checked>
                    </div>
                    <div class="mx-3">
                        <input type="radio" id="bucketA" name="radios" value="<%= bucketA %>">
                        <label for="bucketA"><img class="bucket" src="/img/A@4x.png" alt="A"
                            /></label>
                    </div>
                    <div class="mx-3">
                        <input type="radio" id="bucketB" name="radios" value="<%= bucketB %>">
                        <label for="bucketB"><img class="bucket" src="/img/B@4x.png" alt="A"
                            /></label>
                    </div>
                    <div class="mx-3">
                        <input type="radio" id="bucketC" name="radios" value="<%= bucketC %>">
                        <label for="bucketC"><img class="bucket" src="/img/c@4x.png" alt="A"
                            /></label>
                    </div>
                  </div>
              </div>
              <input type="text" name="formType" value="signup" hidden>
              <!-- Submit button -->
            <button type="submit" class="btn btn-primary btn-block">Sign up</button>
                </div>
            <div >
                <small> Already have an account? <a href="/login">login</a></small>
            </div>
        </form>
    </div>

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous">
    </script>

    <% if(!(messages.error)) {%>
    <script src="https://unpkg.com/intro.js/minified/intro.min.js"></script>
    <% } %>

    <script src="/js/home.js"></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
    <!--
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
    -->
</body>

</html>